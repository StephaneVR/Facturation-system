@model Facturation.DTO.InvoiceDetailDTO

@{
    ViewBag.Title = "Delete";
}

<h2>Verwijderen</h2>

<h3>Bent u zeker dat u dit wilt verwijderen ?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            Korting
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Discount)
        </dd>

        <dt>
            Prijs
        </dt>

        <dd>
            € @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
           Aantal stuks
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Pieces) stks.
        </dd>

        <dt>
            Btw
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Vat) %
        </dd>

        <dt>
            Naam product
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>



    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Verwijderen" class="btn btn-default" /> |
            @Html.ActionLink("Terug naar overzicht", "Details","Invoice", new {id = Model.InvoiceDto.Id}, null)
        </div>
    }
</div>
